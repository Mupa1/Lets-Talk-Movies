<%= render 'shared/errors', obj: @user %>
<div class="text-center">
  <div class="twitter-logo">
      <i class="fab fa-twitter fa-3x"></i>
  </div>
  <h1>Log in to Twitter</h1>
</div>
<div class="center-form">
  <%= form_for (:session), :url => login_path, :html => {class: "signup-form"} do |f| %>
    <div class="form-label">
      <%= f.label :Username, class: "username-label" %>
    </div>
    <div class="form-input">
      <%= f.text_field :Username, class: "username-input", placeholder: "Enter Username" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Log In",  class: "btn btn-primary signup-btn"%>    
    </div>
  <% end %>
  <div class="text-center">
    <%= link_to "Create a twitter account", signup_path %>
  </div>
</div>
