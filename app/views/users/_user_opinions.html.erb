<article class="user-body">
  <p class="user-body-header">ALL REVIEWS</p>
  <% @opinions.each do |opinion| %>
    <div class="user-avatar">
      <div class="picture">
        <%= profile_photo(opinion) %>  
      </div>
    </div>
    <div class="user-content">
    <p class="time"><%= time_ago_in_words(opinion.created_at) %></p> 
      <h4><%= opinion.Author.Fullname.titleize %></h4>
      <span><%= opinion.Text %></span>
      <span class="like col my-flex justify-content-end">
        <% if opinion.likes.any? { |like| like.UserId == current_user.id }%>
          <%= link_to unlike_path(opinion), method: :delete, class: 'user' do %>
            <i class="fas fa-heart text-danger"></i>
          <% end %>
        <% else %>
          <%= link_to like_path(opinion), class: 'user' do %>
            <i class="fas fa-heart"></i>
          <% end %>
        <% end %>
        <p><%= opinion_like_count(opinion) %></p>
        <%= edit_opinion_button(opinion) %>
        <%= delete_opinion_button(opinion) %>
    </span>
      <div class="clear"></div>
    </div>
  <% end %>
</article>